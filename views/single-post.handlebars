<article class="post p-2 bg-dark">
      <div class="row">
          <div class ="col-6 ">
            <h4 class="title">{{post.title}}
            </h4>
          </div>
          <div class="col-12">
            <p class = "post-body ">{{post.post_body}}</p>
          </div>
      </div>
      <div class="text-white">
    {{post.vote_count}} point(s) by {{post.user.username}} on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>


  </article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="like-btn">like</button>
  </div>
</form>
{{/if}}
<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/like.js"></script>
{{/if}}