<article >
  <div class="row">  
    <div class="col-3 arrow"> <a href="/dashboard" class="text-dark"> &larr; Back to Dashboard</a></div>

 <div class="col-6 text-center"><b><h1 class="h2 ">
    Edit Post
  </h1></b></div>
  

  </div>
 
  <form class="edit-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" style="width: 100%;" name="post-title" value="{{post.title}}" />
    </div>
    <div>
      <label for="post-body">Content</label>
      <textarea name="post-body"  cols="30" rows="8">{{post.post_body}}</textarea>
    </div>
    <div class="text-center row ml-2 mr-2 "> 
      <div class="col-4 rounded  grow"><button class="m-2 p-3" style=" width: 200px;"  type="submit " >Save Post</button>
      </div>
      <div class="col-4 rounded grow"> <button type="button" style=" width: 200px;" class="m-2 p-3 delete-post-btn ">Delete Post</button></div>
      <div class="col-4  comment-link"> <a href="/post/{{post.id}}" type="submit" class=" rounded mt-2 text-dark p-3" style=" width: 200px; background-color:yellow;"> Add Comment </a></div>
     
    </div>
   <div class="text-center"></div>

   </form>
  {{> comments post.comments}}
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>