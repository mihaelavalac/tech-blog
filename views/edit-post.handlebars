<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" value="{{post.title}}" />
    </div>
    <div>
      <label for="post-body">Content</label>
      <textarea name="post-body" id="post-url" cols="30" rows="8">{{post.post_body}}</textarea>
    </div>
    <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div class="text-center"> <button type="submit" style="width:100% !important">Save post</button></div>
   <DIV class="text-center"><button type="button" class="delete-post-btn" style="width:100% !important">Delete post</button></div>

   </form>


<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>
  <div class="text-center">
    <button  style="margin-left: auto; margin-right:auto;" type="submit">Add Comment</button>
  </div>
</form>
{{> comments post.comments}}
   
  </form>
</article>